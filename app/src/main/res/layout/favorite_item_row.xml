<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="favorite"
            type="com.texnodevcom.texnodev.model.Favorite" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        onFavoriteClickListener="@{favorite.id}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewFavorite"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/favRowBackground">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView6"
                    app:layout_constraintStart_toStartOf="@+id/imageView6">


                    <TextView
                        android:id="@+id/favTitle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="2dp"
                        android:text="@{favorite.title}"
                        android:textColor="@color/favRowTitleColor"
                        android:textSize="17.5sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/favDate"
                        getDateTimeSubtract="@{favorite.date}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="2dp"
                        android:textSize="12.5sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/favImage" />

                    <ImageView
                        android:id="@+id/favImage"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:downloadUrl="@{favorite.postImage}"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="14sp"
                        android:layout_height="14sp"
                        android:layout_marginTop="1dp"
                        app:layout_constraintBottom_toBottomOf="@+id/favDate"
                        app:layout_constraintEnd_toStartOf="@+id/favDate"
                        app:layout_constraintTop_toTopOf="@+id/favDate"
                        app:srcCompat="@drawable/date_time_row" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>